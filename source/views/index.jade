extends layout

block content
	div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header.mdl-layout--fixed-tabs
		header.mdl-layout__header
			div.mdl-layout__header-row
				span.mdl-layout-title Nessus UI test
			div.mdl-layout__tab-bar.mdl-js-ripple-effect
				a(href="#tab-1").mdl-layout__tab.is-active Handle 2 host records
				a(href="#tab-2").mdl-layout__tab Handle 10,000 host records
		main.mdl-layout__content
			section#tab-1.mdl-layout__tab-panel.is-active
				div.page-content
					div.mdl-grid.center-grid
						div#tab1Container.mdl-cell.mdl-cell--12-col
			section#tab-2.mdl-layout__tab-panel
				div.page-content
					div.mdl-grid.center-grid
						div.mdl-cell.mdl-cell--12-col
							select#pageNumbers.pageSelector
							form#searchForm(method="get")
								div.fullWidthField.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
									input.mdl-textfield__input(type="text" id="searchField")
									label.mdl-textfield__label(for="searchField") Search...
						div#tab2Container.mdl-cell.mdl-cell--12-col